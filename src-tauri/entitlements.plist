<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Allow outgoing network connections (for OCR server communication) -->
	<key>com.apple.security.network.client</key>
	<true/>

	<!-- Allow incoming network connections (if needed) -->
	<key>com.apple.security.network.server</key>
	<true/>

	<!-- Allow running unsigned executable code (Python OCR server) -->
	<key>com.apple.security.cs.allow-unsigned-executable-memory</key>
	<true/>

	<!-- Disable library validation (for bundled Python runtime) -->
	<key>com.apple.security.cs.disable-library-validation</key>
	<true/>

	<!-- Allow JIT compilation (if needed by Python) -->
	<key>com.apple.security.cs.allow-jit</key>
	<true/>

	<!-- Allow DYLD environment variables (for bundled libraries) -->
	<key>com.apple.security.cs.allow-dyld-environment-variables</key>
	<true/>

	<!-- Screen recording permission (for capturing game window) -->
	<key>com.apple.security.device.camera</key>
	<true/>

	<!-- Hardened runtime -->
	<key>com.apple.security.app-sandbox</key>
	<false/>
</dict>
</plist>
