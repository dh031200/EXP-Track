{
  "name": "exp-tracker",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:build": "tauri build",
    "tauri:build:notarize": "tauri build --config src-tauri/tauri.notarize.conf.json",
    "icon:generate": "tauri icon src-tauri/icons/EXP_Tracker.png",
    "prebuild": "npm run icon:generate",
    "build:notarize": "npm run build && npm run tauri:build:notarize",
    "clean": "rm -rf dist node_modules/.vite src-tauri/target",
    "clean:build": "npm run clean && npm install && npm run tauri build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.0",
    "@tauri-apps/plugin-opener": "^2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^3.0.11",
    "happy-dom": "^16.8.1",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^3.0.11"
  }
}
